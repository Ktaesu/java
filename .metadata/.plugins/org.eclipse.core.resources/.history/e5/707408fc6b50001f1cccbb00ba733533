package tset001;

import java.util.Scanner;

public class Test {
	public void count() {
		Scanner sc = new Scanner(System.in);
		
		while(true) {
			System.out.println("문자열 입력 :");
			String str = sc.nextLine();
			if(str =="exir") {
				break;
			}else {
				System.out.println(str.length() + "글자입니다.");
			}
		}
		
		System.out.println("프로그램 종료");
	}

}
